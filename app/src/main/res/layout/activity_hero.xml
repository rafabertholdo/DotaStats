<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.rafabertholdo.dotastats.HeroActivity">
        <ImageView
            android:id="@+id/imgHeroLarge"
            android:layout_width="156dp"
            android:layout_height="181dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgHeroLarge"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtHeroName"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/txtHeroRoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHeroName"
                android:text="Role(s): "
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/txtHeroRolesValues"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHeroName"
                android:layout_toRightOf="@+id/txtHeroRoles"/>
            <TextView
                android:id="@+id/txtHeroAttackType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHeroRolesValues"
                android:text="Attack Type: "
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/txtHeroAttackTypeValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHeroRolesValues"
                android:layout_toRightOf="@+id/txtHeroAttackType"/>
            <LinearLayout
                android:id="@+id/attributeImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHeroAttackTypeValue"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/dota_attribute_strength"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/dota_attribute_agility"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/dota_attribute_intellect"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/attributeValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attributeImages"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/attributeStrengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/attributeAgilityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/attributeInteligenceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attributeValues"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/levelDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"/>
                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/levelUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/abilitiesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgHeroLarge"
            android:paddingTop="10dp"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>
</ScrollView>